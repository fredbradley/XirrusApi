{
    "name": "fredbradley/xirrusapi",
    "description": "PHP API for Xirrus XMS Managment",
    "keywords": [
        "fredbradley",
        "xirrusapi"
    ],
    "homepage": "https://github.com/fredbradley/xirrusapi",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Fred Bradley",
            "email": "code@fredbradley.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "vimeo/psalm": "^3.12"
    },
    "autoload": {
        "psr-4": {
            "FredBradley\\XirrusApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FredBradley\\XirrusApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    }
}
